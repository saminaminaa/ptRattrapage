{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Inscription{% endblock %}

{% block content %}
{{parent()}}

<div class="container-fluid">   
        <div class="row justify-content-center">
            <h1 class="text-center">Formulaire d'ajout d'utilisateur</h1>
        </div>
         <div class="row justify-content-center">
        <div class="col-12 bg-white p-4 m-0">
        {{ form_start(form) }}
        <div class="form-group">
        {{ form_label(form.email, 'Email de l\'utilisateur (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_label(form.password, 'Mot de passe (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
        {{ form_label(form.roles, 'Role ', {'label_attr': {'class': 'font-weightbold'}}) }}
        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>
         <div class="form-group mx-auto text-center">
        {{ form_widget(form.inscrire, { 'label': "Ajouter", 'attr': {'class': 'btn text-white mx-auto text-center'}}) }}
        </div>
        {{ form_end(form) }}
        </div>
        </div>
                

</div>        

{% endblock %}
