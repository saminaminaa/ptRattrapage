{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} - Ajout Classe{% endblock %}
{% block content %}

 <div class="container-fluid">
 <div class="row justify-content-center p4" style="padding-top:3%"><br><br>
 <h1 class="text-center"> Ajouter d'une classe</h1>
 </div>
 <div class="row justify-content-center">
 <div class="col-12 bg-white p-4 m-0">
 {{ form_start(form) }}
<div class="form-group">
 {{ form_label(form.libelle, 'Libelle de la classe (*) ', {'label_attr': {'class': 'font-weightbold'}}) }}
 {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
 </div>
 <div class="form-group mx-auto text-center">
 {{ form_widget(form.ajouter, { 'label': "Ajouter", 'attr': {'class': 'btn text-white mx-auto text-center'}}) }}
 </div>
 {{ form_end(form) }}
 </div>
 </div>
</div>
{% endblock %}